<%- include("../partials/header") %>

    <div class="row"> 
        <div class="col-md-12">
            <h1 class="form-header">Edit Comment</h1>
        </div>
        <div class="info-form">
            <form action="/campgrounds/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<%- include("../partials/footer") %>