<%- include("../partials/header") %>

    <div class="row">
        <div class="col-md-12">
            <h1 class="form-header">Edit <%= campground.name %></h1>
        </div>
        <div class="info-form">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input class="form-control" type="text" name="name" value="<%= campground.name %>" id="name">
                </div>
                <div class="form-group">
                    <label for="price">Campground Price (USD)</label>
                    <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.01" step="0.01" id="price">
                </div>
                <div class="form-group">
                    <label for="description">Campground Description</label>
                    <input class="form-control" type="text" name="description" value="<%= campground.description %>" id="description">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" name="image" id="image" accept="image/*">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>


<%- include("../partials/footer") %>